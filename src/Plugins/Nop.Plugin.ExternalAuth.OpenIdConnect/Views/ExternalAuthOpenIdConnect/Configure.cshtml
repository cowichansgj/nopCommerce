@{
    Layout = "";
}
@model Nop.Plugin.ExternalAuth.OpenIdconnect.Models.ConfigurationModel
@using Nop.Web.Framework

@Html.Action("StoreScopeConfiguration", "Setting", new { area = "Admin" })

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.OverrideStoreCheckboxFor(model => model.OpenIdConnectServer_OverrideForStore, model => model.OpenIdConnectServer, Model.ActiveStoreScopeConfiguration)
                        @Html.NopLabelFor(model => model.OpenIdConnectServer)
                    </div>
                    <div class="col-md-9">
                        @Html.NopEditorFor(model => model.OpenIdConnectServer)
                        @Html.ValidationMessageFor(model => model.OpenIdConnectServer)
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.OverrideStoreCheckboxFor(model => model.RedirectUrl_OverrideForStore, model => model.RedirectUrl, Model.ActiveStoreScopeConfiguration)
                        @Html.NopLabelFor(model => model.RedirectUrl)
                    </div>
                    <div class="col-md-9">
                        @Html.NopEditorFor(model => model.RedirectUrl)
                        @Html.ValidationMessageFor(model => model.RedirectUrl)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        @Html.OverrideStoreCheckboxFor(model => model.LogoutRedirectUrl_OverrideForStore, model => model.LogoutRedirectUrl, Model.ActiveStoreScopeConfiguration)
                        @Html.NopLabelFor(model => model.LogoutRedirectUrl)
                    </div>
                    <div class="col-md-9">
                        @Html.NopEditorFor(model => model.LogoutRedirectUrl)
                        @Html.ValidationMessageFor(model => model.LogoutRedirectUrl)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        @Html.OverrideStoreCheckboxFor(model => model.ClientId_OverrideForStore, model => model.ClientId, Model.ActiveStoreScopeConfiguration)
                        @Html.NopLabelFor(model => model.ClientId)
                    </div>
                    <div class="col-md-9">
                        @Html.NopEditorFor(model => model.ClientId)
                        @Html.ValidationMessageFor(model => model.ClientId)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.OverrideStoreCheckboxFor(model => model.ClientSecret_OverrideForStore, model => model.ClientSecret, Model.ActiveStoreScopeConfiguration)
                        @Html.NopLabelFor(model => model.ClientSecret)
                    </div>
                    <div class="col-md-9">
                        @Html.NopEditorFor(model => model.ClientSecret)
                        @Html.ValidationMessageFor(model => model.ClientSecret)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        &nbsp;
                    </div>
                    <div class="col-md-9">
                        <input type="submit" name="save" class="btn bg-blue" value="@T("Admin.Common.Save")" />
                    </div>
                </div> 
            </div>
        </div>
    </div> 
}